<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= form_for @user ,url: {action: :update} do |f| %>
			<%= devise_error_messages! %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>

			<%= f.submit "Update" %>
		<% end %>
	</div>
</div>